pipeline{
    agent any
    stages{
        stage('install nginx'){
            steps{
                sh 'sudo apt install nginx -y'
            }
        }
        stage('delete default page'){
            steps{
                sh 'sudo rm -rf /var/www/html/*'
            }
        } 
         stage('ecomm'){
            steps{
                sh 'sudo cp -rf ecomm/* /var/www/html/'
            }
        } 
         stage('ecomm'){
            steps{
                sh 'sudo systemctl restart nginx'
            }
        }

    }
}
